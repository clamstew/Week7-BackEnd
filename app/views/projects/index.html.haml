%h1.text-center
  Active Projects
  %small= link_to 'New Project', new_project_path

%h1 New project
= render 'form'
= link_to 'Back', projects_path


.row
  .large-9.large-centered.columns
    %table
      %thead
        %tr
          %th Name
          %th Subscribed
          %th Last updated
          %th
          %th
      %tbody.projects
        - @projects.each do |project|
          = render "show", project: project